@model BodyViewModel
    <html>
    <head>

        <link href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/css/govuk-template.min.css?BjfSg1dcA4OmLlo2jSooBQ==" rel="stylesheet" type="text/css" />
        <link href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/css/fonts.min.css?slmQTlfFDt4cZoFimwxKWg==" rel="stylesheet" type="text/css" />
        <link href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/css/govuk.min.css?lnWH1h2sgwS/hK3y58wsgA==" rel="stylesheet" type="text/css" />
        <link href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/css/main.min.css?5/ejltEBHiBzYlxbjVFEgg==" rel="stylesheet" type="text/css" />
        <link rel="shortcut icon" href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/images/favicon.ico?922b6f2VOn2Ys5N0e3sUVw==" type="image/x-icon" />
        <link rel="mask-icon" href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/images/gov.uk_logotype_crown.svg?Kv0SWx25YQk4jUoHJzEvPg==" color="#0b0c0c">
        <link rel="apple-touch-icon-precomposed" sizes="152x152" href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/images/apple-touch-icon-152x152.png?QIRtRqo3Iy4rNQZXac5WfA==">
        <link rel="apple-touch-icon-precomposed" sizes="120x120" href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/images/apple-touch-icon-167x167.png?9jbLfUcfxiOdIkHXXL2ryw==">
        <link rel="apple-touch-icon-precomposed" sizes="180x180" href="https://dev-cdn.nationalcareersservice.org.uk/gds_toolkit/images/apple-touch-icon-180x180.png?oPfhtyikIBayR9xU7kDQVQ==">
    </head>
    <body>

        <h2 class="heading-large">Current opportunities</h2>
        <div class="grid-row" id="appGeneric">
            <div class="column-full">
                <h3 class="heading-medium">
                    Apprenticeships
                    <span class="heading-secondary">In England</span>
                </h3>
            </div>
            @if (Model.Data.Apprenticeships.Count() > 0)
            {
                foreach (var apprenticeVacancy in Model.Data.Apprenticeships)
                {
                    <div class="column-half">
                        <div class="panel panel-border-narrow opportunity-item">
                            <h4 class="heading-small">
                                <a href="@apprenticeVacancy.Uri">@apprenticeVacancy.Title</a>
                            </h4>
                            <ul class="list">
                                <li><span class="bold-small">Wage : </span> @apprenticeVacancy.WageUnit <span class="grey font-xsmall">@apprenticeVacancy.WageText</span></li>
                                <li><span class="bold-small">Location:</span> @apprenticeVacancy.LocationTown @apprenticeVacancy.LocationPostCode</li>
                            </ul>
                        </div>
                    </div>
                }
                <div class="dfc-code-jp-vacancyText">
                    <a href="https://www.findapprenticeship.service.gov.uk/apprenticeshipsearch">Find apprenticeships near you</a>
                </div>
             }
             else
             {
                <div class="dfc-code-jp-novacancyText">
                    <p>We can't find any apprenticeship vacancies in England for @Model.JobTitle right now.</p>
                    <p>The <a href="https://www.gov.uk/apply-apprenticeship">Find an apprenticeship service</a> can help you with your search, send alerts when new apprenticeships become available and has advice on how to apply.</p>
                </div>
             }
        </div>
</body>
</html>