@model HealthViewModel

<html>
<body>
    <main role="main">
        <div class="content-container">
            <h2 class="heading-medium">Service Status</h2>
            <h2 class="heading-small">At : @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</h2>

            <ul class="list-service">
                @foreach (var healthItem in Model.HealthItems)
                {
                    <li class="list-service_@(healthItem.HealthServiceState)">
                        <div class="grid-row">
                            <div class="column-one-half">
                                @Html.DisplayFor(m => healthItem.Service)
                            </div>
                            <div class="column-one-half">
                                @Html.DisplayFor(m => healthItem.SubService)
                            </div>
                            <div class="column-one-half">
                                @Html.DisplayFor(m => healthItem.CheckParametersUsed)
                            </div>
                        </div>
                        <div class="grid-row">
                            <div class="column-one-half">
                                    @Html.DisplayFor(m => healthItem.Message)
                            </div>
                        </div>
                    </li>
                }
             </ul>
        </div>
    </main>
</body>
</html>
